{
  "compilerOptions": {
    // "lib": ["ES2022"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",  // Resolve modules as Node.js would
    "strict": true,
    "esModuleInterop": true,     // Enables CommonJS/ESM interoperability
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    // "types": ["node"]            
  },
  "include": ["src/**/*.ts"]      // Ensure TypeScript files in 'src' are compiled
}
